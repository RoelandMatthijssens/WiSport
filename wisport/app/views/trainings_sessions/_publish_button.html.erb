<% if trainings_session.owner == current_user %>
	<% if trainings_session.visibility == "Private" %>
		<%= link_to "Publish", publish_trainings_session_path(trainings_session), class: "btn", id: "publish_btn_#{trainings_session.id}", :method => :put, :remote => true %>
	<% else %>
		<%= link_to "Un Publish", publish_trainings_session_path(trainings_session), class: "btn btn-danger", id: "publish_btn_#{trainings_session.id}", :method => :put, :remote => true %>
	<% end %>
<% end %>