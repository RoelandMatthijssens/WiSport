<!DOCTYPE html>
<html>
<head>
	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
	<!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
	<![endif]-->
	<%= stylesheet_link_tag "application", :media => "all"  %>
	<%= javascript_include_tag :application %>
	<%= csrf_meta_tag %>
	<%= yield(:head) %>
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div id="container" class="container">
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</a>
					
					<%= link_to content_tag(:span, "Wi", class: "logo_wi")+content_tag(:span, "Sport", class: "logo_sport"), root_path, class: "brand" %>
					<div class="nav-collapse">
						<ul class="nav pull-left">
							<li><%= link_to "Exercices" %></li>
							<li><%= link_to "Events" %></li>
						</ul>
						<ul class="nav pull-right">
							<% if current_user %>
								<li> <%= link_to "Welcome #{current_user.username}", current_user %>  </li>
								<li class="divider-vertical"></li>
								<li class="hilight"> <%= link_to "Log Out", logout_path %>  </li>
							<% else %>
								<li> <%= link_to "Log In", login_path %>  </li>
								<li class="divider-vertical"></li>
								<li class="hilight"> <%= link_to "Sign Up", signup_path %>  </li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="row"> 
			<div class="span12">
				<% flash.each do |name, msg| %>
				<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
					<a class="close" data-dismiss="alert">Ã—</a>
					<%= msg %>
				</div>
				<% end %>

				<%= content_tag :h1, yield(:title) if show_title? %>
				<%= yield %>

				<% if Rails.env.development? %>
				<div id="debug">
					DEBUG
					<%= debug(params) if Rails.env.development? %><br/>
					<br/>
					<table>
						<thead>
							<tr>
								<th>SESSION</th>
							</tr>
						</thead>
						<tbody>
							<% session.keys.each do |key| %>
							<tr>
								<td><%= key %></td>
								<td><%= session[key] %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<% end %>
			</div>
		</div class="row-fluid">
	</div>
</body>
</html>
