<% title "Log in" %>


		<p>
			Don't have an account? <%= link_to "Sign up", signup_path %> or 
			<%= form_tag '/auth/google_oauth2', method: 'get' do %>
				<%= button_tag "Sign in with google", class: 'zocial google' %>
			<% end %>
		</p>

		<%= simple_form_for :signin, url: sessions_path, html: {class: 'form-horizontal' } do |f| %>
			<%= f.error_notification %>
	
		  <%= f.input :login %>
		  <%= f.input :password %>

			<%= f.error :base %>
		  <%= f.button :submit, "Log In" %>
		<% end %>
