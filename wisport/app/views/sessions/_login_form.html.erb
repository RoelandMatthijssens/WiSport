	<% title "Log in" %>
	<p>
		Don't have an account? <%= link_to "Sign up", signup_path %> or 
		<br/>
		<%= link_to "Sign in with google", '/auth/google_oauth2', class: 'zocial google' %>
		<%= link_to "Sign in with facebook", '/auth/facebook', class: 'zocial facebook' %>
		<%= link_to "Sign in with twitter", '/auth/twitter', class: 'zocial twitter' %>
	</p>
	
	<%= simple_form_for :signin, url: sessions_path, remote: true, html: {class: 'form-horizontal' } do |f| %>
		<%= f.error_notification %>
	
	  <%= f.input :login %>
	  <%= f.input :password %>
	
		<%= f.error :base %>
		
	  <div class="form_buttons"> 
			<%= f.button :submit, "Log In", class: 'btn btn-primary' %> 
		</div>
	<% end %>
