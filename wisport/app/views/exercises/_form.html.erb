<h1>New exercise</h1>
<%= simple_form_for(@exercise, remote: true, html: {class: 'form-horizontal' }) do |f| %>
	<%= f.error_notification %>

	<%= f.input :name %>
	<%= f.input :type, :collection => Exercise.select_options %>
	<div id="distance_exercise" class="hidden">
		<%= f.input :distance %>
	</div>
	<div id="reps_exercise" class="hidden">
		<%= f.input :reps %>
	</div>
	<div id="time_exercise" class="hidden">	
		<%= f.input :hours %>
		<%= f.input :minutes %>
 		<%= f.input :seconds %>
	</div>
	<% if false %>
		<%= f.input :visibility, :collection => Exercise.visibility_options %>
	<% end %>
	<%= f.simple_fields_for :information do |builder| %>
		<%= render 'information_form', f: builder %>
	<% end %>
	
	<%= f.error :base %>
  <div class="form_buttons">
    <%= f.button :submit, class: 'btn btn-primary' %>
		<%= link_to 'Cancel', exercises_path, class: 'btn btn-danger' %>
  </div>
<% end %>
