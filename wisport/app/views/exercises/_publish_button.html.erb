<% if exercise.owner == current_user %>
	<% if exercise.visibility == "Private" %>
		<%= link_to "Publish", "publish_exercise_path(exercise)", class: "btn", :method => :put, :remote => true %>
	<% else %>
		<%= link_to "Un Publish", "publish_exercise_path(exercise)", class: "btn btn-danger", :method => :put, :remote => true %>
	<% end %>
<% end %>
