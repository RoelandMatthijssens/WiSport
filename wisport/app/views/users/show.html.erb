<p id="notice"><%= notice %></p>
<div class="row">
	<div class="profile_image span3">
		<%= image_tag profile_picture(@user) %>
		<br/>
		<%= render :partial => 'follow' %>
	</div>
	<div class="span9">
		<div class="user_info">
			<h1> User Info </h1>
			<p>
				<b>Name:</b>
				<%= @user.username %>

			</p>
			<p>
				<b>email:</b>
				<%= @user.email %>
			</p>
			<% @user.user_login_services.each do |user_service| %>
					<p>
						<b>provider:</b>
						<%= user_service.provider %>
					</p>
					
					<p>
						<b>login:</b>
						<%= user_service.login %>
					</p>
					<p>
						<b>uid:</b>
						<%= user_service.uid %>
					</p>
					<p>
						<b>acces_token:</b>
						<%= user_service.acces_token %>
					</p>
					<p>
						<b>refresh_token:</b>
						<%= user_service.refresh_token %>
					</p>
					<p>
						<b>token_expiration:</b>
						<%= user_service.token_expiration %>
					</p>
					<p>
						<b>profile_link:</b>
						<%=link_to  "#{user_service.provider} profile", user_service.profile_link %>
					</p>
			<% end %>
			<% if @user == @current_user %>
				<%= link_to 'Edit', edit_user_path(@user) %> |
			<% end %>
			<%= link_to 'Back', users_path %>
		</div>
	</div>
</div>
<% if @followers_exercises.empty? %>
	<p>You are not following anyone. Look for <%= link_to "friends", users_path %> to follow </p>
<% else %>
	<h2>Followed Exercises</h2>
	<%= render :partial => "exercises/exercise_list", :locals => {:exercise_list => @followers_exercises, :param_name => :followers_page} %>
<% end %>
<br/>
<% if @exercises.empty? %>
	<p>You have not yet created an exercise. Create your own <%= link_to "exercises", new_exercise_path %> </p>
<% else %>
	<h2>My Exercises</h2>
	<%= render :partial => "exercises/exercise_list", :locals => {:exercise_list => @exercises, :publishable => true, :param_name => :my_exercises_page} %>
<% end %>
