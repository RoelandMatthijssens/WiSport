<div class="follow" id='follow'>
	<%= "#{@user.followers.size} #{"follower".pluralize(@user.followers.size)}" %>
	<br/>
<% if @user != @current_user  %>
	<% if @current_user.friends.include?(@user) %>
		<%= button_to "Unfollow", toggle_follow_user_path(@user), class: "btn btn-danger", :method => :put, :remote => true %>
	<% else %>
		<%= button_to "Follow", toggle_follow_user_path(@user), class: "btn btn-primary", :method => :put, :remote => true %>
	<% end %>
<% end %>
</div>
